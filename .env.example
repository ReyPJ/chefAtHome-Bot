# WhatsApp Business Cloud API Credentials
# Obtén estos valores desde Meta for Developers: https://developers.facebook.com/
WHATSAPP_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_ID=your_phone_number_id_here

# Token de verificación para el webhook (puedes crear uno personalizado)
VERIFY_TOKEN=your_custom_verify_token_123

# URL base de la API de WhatsApp
WHATSAPP_API_URL=https://graph.facebook.com/v18.0

# Server Configuration
PORT=3000
NODE_ENV=production

# PostgreSQL Database Configuration
# Formato: postgresql://user:password@host:port/database
# Railway provee esta variable automáticamente cuando agregas PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_bot

# Database Pool Configuration (opcional - valores por defecto)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Setup Database - Skip confirmation prompt (útil para CI/CD y Railway)
# Descomentar para skip confirmación en setup-db.js
# SKIP_CONFIRMATION=true

# Stripe Payment Integration
# Obtén tus keys desde: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# URLs de redirección después del pago (opcional)
# Si no se configuran, se usarán URLs por defecto
STRIPE_SUCCESS_URL=https://tu-app.com/success
STRIPE_CANCEL_URL=https://tu-app.com/cancel
